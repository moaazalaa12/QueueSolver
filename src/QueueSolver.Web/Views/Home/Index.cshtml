@{
    ViewData["Title"] = "Queue Theory Solver";
}

<div class="container-fluid px-4">
    <div class="row g-4">
        <!-- Sidebar Configuration Panel -->
        <div class="col-lg-3 col-md-4">
            <div class="sidebar-panel shadow-sm">
                <div class="sidebar-header">
                    <h4>
                        <i class="bi bi-sliders text-primary"></i>
                        Configuration
                    </h4>
                </div>
                <div class="sidebar-body">
                    <form id="simForm">
                        <!-- Distribution Settings -->
                        <div class="mb-3">
                            <label class="form-label" for="arrDist">
                                <i class="bi bi-arrow-down-circle me-1"></i> Arrival Pattern
                            </label>
                            <select class="form-select" id="arrDist" aria-label="Arrival distribution pattern">
                                <option value="1">Deterministic</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label" for="svcDist">
                                <i class="bi bi-gear me-1"></i> Service Pattern
                            </label>
                            <select class="form-select" id="svcDist" aria-label="Service distribution pattern">
                                <option value="1">Deterministic</option>
                            </select>
                        </div>

                        <!-- Rate Parameters -->
                        <div class="input-group-custom">
                            <div class="input-row">
                                <div>
                                    <label class="form-label" for="lambda">λ (Arrival)</label>
                                    <input type="number" class="form-control" id="lambda" value="0" step="0.1" min="0" aria-label="Arrival rate lambda">
                                </div>
                                <div>
                                    <label class="form-label" for="mu">µ (Service)</label>
                                    <input type="number" class="form-control" id="mu" value="0" step="0.1" min="0" aria-label="Service rate mu">
                                </div>
                            </div>
                        </div>

                        <!-- System Parameters -->
                        <div class="input-group-custom">
                            <div class="input-row">
                                <div>
                                    <label class="form-label" for="servers">
                                        <i class="bi bi-person-workspace me-1"></i> Servers (c)
                                    </label>
                                    <input type="number" class="form-control" id="servers" value="1" min="1" aria-label="Number of servers">
                                </div>
                                <div>
                                    <label class="form-label" for="capacity">
                                        <i class="bi bi-box me-1"></i> Capacity (K)
                                    </label>
                                    <input type="number" class="form-control" id="capacity" value="50" min="1" aria-label="System capacity">
                                </div>
                            </div>
                        </div>

                        <!-- Customer Settings -->
                        <div class="input-group-custom">
                            <div class="input-row">
                                <div>
                                    <label class="form-label" for="numCust">
                                        <i class="bi bi-people me-1"></i> Customers (N)
                                    </label>
                                    <input type="number" class="form-control" id="numCust" value="20" min="1" aria-label="Number of customers">
                                </div>
                                <div>
                                    <label class="form-label" for="initialCust">
                                        <i class="bi bi-person-plus me-1"></i> Initial (M)
                                    </label>
                                    <input type="number" class="form-control" id="initialCust" value="0" min="0" aria-label="Initial customers in system">
                                </div>
                            </div>
                        </div>

                        <!-- Simulation Mode Toggle -->
                        @* <div class="checkbox-panel mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="forceSim" aria-label="Force simulation mode">
                                <label class="form-check-label" for="forceSim" title="Ignores theoretical formulas and simulates customer by customer">
                                    <i class="bi bi-lightning-charge me-1"></i> Force Simulation
                                </label>
                            </div>
                            <div class="text-muted small mt-1" style="font-size: 0.75em; margin-left: 1.5rem;">
                                Use discrete-event simulation instead of analytical formulas
                            </div>
                        </div> *@

                        <!-- Run Button -->
                        <button type="button" class="btn btn-primary btn-run w-100" id="runSolverBtn">
                            <i class="bi bi-play-fill"></i>
                            <span>Run Solver</span>
                        </button>
                    </form>

                    <div class="section-divider"></div>

                    <!-- Results Summary -->
                    <div class="stats-panel">
                        <div class="stats-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-semibold text-secondary" style="font-size: 0.8rem;">
                                    <i class="bi bi-bar-chart me-1"></i> Results
                                </span>
                                <span class="badge bg-info-soft" id="modeIndicator">-</span>
                            </div>
                        </div>
                        <div class="stats-body">
                            <div class="stats-label">System Time (ti)</div>
                            <div class="stats-value" id="valTi">-</div>
                            <div class="text-muted small mt-2">First busy / empty time</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="col-lg-9 col-md-8">
            <!-- Timeline Visualization -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up me-2 text-primary"></i>
                        Timeline Visualization
                    </h5>
                    <span class="badge badge-status bg-secondary-soft" id="statusBadge">
                        <i class="bi bi-circle me-1"></i> Idle
                    </span>
                </div>
                <div class="card-body p-0">
                    <div class="viz-container overflow-auto position-relative" id="vizContainer">
                    </div>
                </div>
            </div>

            <!-- Zoom Control -->
           

            <!-- Charts Row -->
            <div class="row g-4 mb-4">
                <div class="col-md-6">
                    <div class="card chart-card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-diagram-3 me-2 text-primary"></i>
                                Customers in System
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="chart-container">
                                <canvas id="systemChart"></canvas>
                            </div>
                            <div class="text-center mt-2">
                                <span class="badge bg-info-soft">L(t) = Queue + Service</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card chart-card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-people me-2 text-danger"></i>
                                Customers in Queue
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="chart-container">
                                <canvas id="queueChart"></canvas>
                            </div>
                            <div class="text-center mt-2">
                                <span class="badge bg-danger-soft">Nq(t) = Waiting Only</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="zoom-control mb-4 d-flex align-items-center gap-3">
                <label class="fw-semibold text-secondary mb-0" for="chartZoom" style="white-space: nowrap;">
                    <i class="bi bi-zoom-in me-1"></i> Time Scale:
                </label>
                <input type="range" class="form-range flex-grow-1" id="chartZoom" min="10" max="100" value="100" aria-label="Chart zoom level">
                <span class="text-muted small" style="white-space: nowrap;">Expand/shrink time axis</span>
            </div>

            <!-- Results Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-table me-2 text-primary"></i>
                        Detailed Metrics per Customer
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-container" style="max-height: 400px; overflow-y: auto;">
                        <table class="table table-striped table-hover text-center align-middle" id="resultsTable">
                            <thead class="sticky-top">
                                <tr>
                                    <th><i class="bi bi-hash"></i></th>
                                    <th><i class="bi bi-box-arrow-in-right me-1"></i> Arrival</th>
                                    <th><i class="bi bi-play-circle me-1"></i> Start Service</th>
                                    <th><i class="bi bi-hourglass-split me-1"></i> Wait (Wq)</th>
                                    <th><i class="bi bi-clock me-1"></i> Duration</th>
                                    <th><i class="bi bi-box-arrow-right me-1"></i> Departure</th>
                                    <th><i class="bi bi-flag me-1"></i> Status</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="https://d3js.org/d3.v7.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // === Constants ===
        const COLORS = {
            primary: '#667eea',
            primaryBg: 'rgba(102, 126, 234, 0.15)',
            danger: '#ef4444',
            dangerBg: 'rgba(239, 68, 68, 0.15)',
            muted: '#64748b',
            connector: '#cbd5e1',
            gridLine: '#e2e8f0'
        };

        const WAIT_THRESHOLD = 0.001;
        const DEFAULT_MAX_TIME = 10;

        // === Chart Configuration ===
        const commonChartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            interaction: { intersect: false, axis: 'x' },
            elements: { point: { radius: 0 } },
            scales: {
                x: { 
                    type: 'linear', 
                    title: { display: true, text: 'Time (t)', color: COLORS.muted, font: { weight: '600' } },
                    grid: { color: COLORS.gridLine }
                },
                y: { 
                    beginAtZero: true, 
                    ticks: { stepSize: 1 },
                    grid: { color: COLORS.gridLine }
                }
            },
            plugins: {
                legend: { display: false }
            },
            animation: false
        };

        let systemChart, queueChart;
        let originalMaxTime = DEFAULT_MAX_TIME;

        // === DOM Elements (cached for performance) ===
        const elements = {
            get statusBadge() { return document.getElementById('statusBadge'); },
            get modeIndicator() { return document.getElementById('modeIndicator'); },
            get valTi() { return document.getElementById('valTi'); },
            get chartZoom() { return document.getElementById('chartZoom'); },
            get resultsTableBody() { return document.querySelector('#resultsTable tbody'); },
            get runBtn() { return document.getElementById('runSolverBtn'); }
        };

        // === Initialize Charts ===
        function initCharts() {
            const ctx1 = document.getElementById('systemChart').getContext('2d');
            systemChart = new Chart(ctx1, {
                type: 'line',
                data: {
                    datasets: [{
                        label: 'In System',
                        data: [],
                        borderColor: COLORS.primary,
                        backgroundColor: COLORS.primaryBg,
                        borderWidth: 2,
                        stepped: true,
                        fill: true,
                        tension: 0
                    }]
                },
                options: commonChartOptions
            });

            const ctx2 = document.getElementById('queueChart').getContext('2d');
            queueChart = new Chart(ctx2, {
                type: 'line',
                data: {
                    datasets: [{
                        label: 'In Queue',
                        data: [],
                        borderColor: COLORS.danger,
                        backgroundColor: COLORS.dangerBg,
                        borderWidth: 2,
                        stepped: true,
                        fill: true,
                        tension: 0
                    }]
                },
                options: commonChartOptions
            });
        }

        // === Chart Scale Update ===
        function updateChartScale(val) {
            const zoomPercentage = Math.max(10, Math.min(100, parseInt(val, 10)));
            const newMax = originalMaxTime * (100 / zoomPercentage);

            [systemChart, queueChart].forEach(chart => {
                if (chart) {
                    chart.options.scales.x.max = newMax;
                    chart.update('none');
                }
            });
        }

        // === D3 Visualization Setup ===
        const margin = { top: 30, right: 30, bottom: 40, left: 50 };
        const width = 1000 - margin.left - margin.right;
        const height = 350 - margin.top - margin.bottom;

        const svg = d3.select("#vizContainer").append("svg")
            .attr("width", "100%")
            .attr("viewBox", "0 0 1000 420")
            .append("g")
            .attr("transform", `translate(${margin.left},${margin.top})`);

        function makeXGridlines(xScale) {
            return d3.axisBottom(xScale).ticks(10);
        }

        // === Utility Functions ===
        function formatNumber(value, decimals = 2) {
            return value != null ? value.toFixed(decimals) : '-';
        }

        function getProperty(obj, camelCase, pascalCase) {
            return obj[camelCase] ?? obj[pascalCase];
        }

        function setStatusBadge(text, className, icon = 'circle') {
            const badge = elements.statusBadge;
            badge.innerHTML = `<i class="bi bi-${icon} me-1"></i> ${text}`;
            badge.className = `badge badge-status ${className}`;
        }

        // === Form Data Collection ===
        function getFormPayload() {
            const getValue = (id, parser) => parser(document.getElementById(id).value);
            const forceSimCheckbox = document.getElementById('forceSim');

            return {
                arrivalDist: getValue('arrDist', parseInt),
                serviceDist: getValue('svcDist', parseInt),
                servers: getValue('servers', parseInt),
                capacity: getValue('capacity', parseInt),
                lambda: getValue('lambda', parseFloat),
                mu: getValue('mu', parseFloat),
                n: getValue('numCust', parseInt),
                forceSimulation: forceSimCheckbox ? forceSimCheckbox.checked : false,
                discipline: 0,
                initialCustomers: getValue('initialCust', parseInt)
            };
        }

        // === API Communication ===
        async function runSimulation(payload) {
            const response = await fetch('/api/simulation/run', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });

            if (!response.ok) {
                const errorText = await response.text();
                throw new Error(`Server error (${response.status}): ${errorText}`);
            }

            return response.json();
        }

        // === Main Simulation Handler ===
        async function startSimulation() {
            const btn = elements.runBtn;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Running...';
            setStatusBadge('Running...', 'bg-warning-soft', 'arrow-repeat animate-spin');

            try {
                const payload = getFormPayload();
                const data = await runSimulation(payload);
                renderResults(data);
                setStatusBadge('Completed', 'bg-success-soft', 'check-circle-fill');
            } catch (e) {
                console.error('Simulation error:', e);
                alert('Error: ' + e.message);
                setStatusBadge('Error', 'bg-danger-soft', 'exclamation-triangle-fill');
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-play-fill"></i> <span>Run Solver</span>';
            }
        }

        // === Results Rendering ===
        function renderResults(data) {
            const isAnalytical = getProperty(data, 'isAnalytical', 'IsAnalytical');
            elements.modeIndicator.textContent = isAnalytical ? 'Analytical' : 'Simulation';
            elements.modeIndicator.className = isAnalytical ? 'badge bg-info-soft' : 'badge bg-warning-soft';

            // Ti Metric
            const ti = getProperty(data, 'firstBusyTime', 'FirstBusyTime');
            elements.valTi.textContent = ti != null ? ti.toFixed(2) : '∞';

            // Extract data
            const customers = data.results || data.Results || [];
            const sysHist = mapHistoryData(data.systemSizeHistory || data.SystemSizeHistory || []);
            const qHist = mapHistoryData(data.queueSizeHistory || data.QueueSizeHistory || []);

            // Calculate max time with fallback
            const maxCompletionTime = customers.length > 0
                ? d3.max(customers, d => getProperty(d, 'completionTime', 'CompletionTime')) || DEFAULT_MAX_TIME
                : DEFAULT_MAX_TIME;
            originalMaxTime = maxCompletionTime * 1.05;

            updateCharts(sysHist, qHist);
            renderD3Visualization(customers);
            renderResultsTable(customers);
        }

        function mapHistoryData(history) {
            return history.map(h => ({
                x: h.time ?? h.Time,
                y: h.count ?? h.Count
            }));
        }

        function updateCharts(sysHist, qHist) {
            const sysData = [...sysHist];
            if (sysData.length > 0) {
                sysData.push({ x: originalMaxTime, y: sysData[sysData.length - 1].y });
            }
            systemChart.data.datasets[0].data = sysData;

            const qData = [...qHist];
            if (qData.length > 0) {
                qData.push({ x: originalMaxTime, y: qData[qData.length - 1].y });
            }
            queueChart.data.datasets[0].data = qData;

            elements.chartZoom.value = 100;
            updateChartScale(100);
        }

        function renderD3Visualization(customers) {
            svg.selectAll("*").remove();

            const xScale = d3.scaleLinear().domain([0, originalMaxTime]).range([0, width]);

            // Add gridlines
            svg.append("g")
                .attr("class", "grid")
                .attr("transform", `translate(0, ${height})`)
                .style("stroke-dasharray", "3,3")
                .style("opacity", 0.3)
                .call(makeXGridlines(xScale).tickSize(-height).tickFormat(""));

            // Row labels with better styling
            const rowLabels = [
                { y: 50, text: 'Arrival', icon: '→' },
                { y: 150, text: 'Service', icon: '⚙' },
                { y: 250, text: 'Departure', icon: '←' }
            ];
            rowLabels.forEach(label => {
                svg.append("text")
                    .attr("x", -45)
                    .attr("y", label.y)
                    .text(label.text)
                    .style("font-weight", "600")
                    .style("font-size", "11px")
                    .style("fill", COLORS.muted);
            });

            // X-Axis
            svg.append("g")
                .attr("transform", `translate(0, ${height})`)
                .call(d3.axisBottom(xScale))
                .style("font-size", "11px");

            // Customer events
            const eventGroup = svg.append("g").attr("class", "event-group");
            customers.forEach((customer, index) => renderCustomerEvent(eventGroup, customer, index, xScale));
        }

        function renderCustomerEvent(group, customer, index, xScale) {
            const id = getProperty(customer, 'id', 'Id');
            const arrivalTime = getProperty(customer, 'arrivalTime', 'ArrivalTime');
            const serviceStartTime = getProperty(customer, 'serviceStartTime', 'ServiceStartTime');
            const completionTime = getProperty(customer, 'completionTime', 'CompletionTime');
            const isRejected = getProperty(customer, 'isRejected', 'IsRejected');

            const colorPalette = ['#667eea', '#764ba2', '#f093fb', '#f5576c', '#4facfe', '#00f2fe', '#43e97b', '#38f9d7', '#fa709a', '#fee140'];
            const color = colorPalette[index % colorPalette.length];
            const arrX = xScale(arrivalTime);

            // Arrival line
            group.append("line")
                .attr("x1", arrX).attr("y1", 30)
                .attr("x2", arrX).attr("y2", 70)
                .attr("stroke", color).attr("stroke-width", 2.5)
                .attr("stroke-linecap", "round");

            group.append("text")
                .attr("x", arrX).attr("y", 22)
                .text(`C${id}`)
                .attr("font-size", "10px")
                .attr("font-weight", "600")
                .attr("text-anchor", "middle")
                .attr("fill", color);

            group.append("text")
                .attr("x", arrX).attr("y", 85)
                .text(formatNumber(arrivalTime, 1))
                .attr("font-size", "9px")
                .attr("fill", COLORS.muted)
                .attr("text-anchor", "middle");

            if (isRejected) {
                group.append("text")
                    .attr("x", arrX).attr("y", 100)
                    .text("✕")
                    .attr("fill", "#ef4444")
                    .attr("font-weight", "bold")
                    .attr("font-size", "14px")
                    .attr("text-anchor", "middle");
            } else if (serviceStartTime != null) {
                const svcX = xScale(serviceStartTime);
                const depX = xScale(completionTime);

                // Wait connector
                if (svcX > arrX) {
                    group.append("line")
                        .attr("x1", arrX).attr("y1", 70)
                        .attr("x2", svcX).attr("y2", 130)
                        .attr("stroke", COLORS.connector)
                        .attr("stroke-dasharray", "4,2")
                        .attr("stroke-width", 1.5);

                    group.append("circle")
                        .attr("cx", svcX).attr("cy", 130)
                        .attr("r", 4)
                        .attr("fill", color);
                }

                // Service line
                group.append("line")
                    .attr("x1", svcX).attr("y1", 130)
                    .attr("x2", svcX).attr("y2", 170)
                    .attr("stroke", color).attr("stroke-width", 2.5)
                    .attr("stroke-linecap", "round");

                group.append("text")
                    .attr("x", svcX).attr("y", 122)
                    .text(formatNumber(serviceStartTime, 1))
                    .attr("font-size", "10px")
                    .attr("font-weight", "600")
                    .attr("text-anchor", "middle")
                    .attr("fill", color);

                // Service duration connector
                group.append("line")
                    .attr("x1", svcX).attr("y1", 170)
                    .attr("x2", depX).attr("y2", 230)
                    .attr("stroke", color)
                    .attr("stroke-width", 1.5)
                    .attr("opacity", 0.6);

                // Departure line
                group.append("line")
                    .attr("x1", depX).attr("y1", 230)
                    .attr("x2", depX).attr("y2", 270)
                    .attr("stroke", color).attr("stroke-width", 2.5)
                    .attr("stroke-linecap", "round");

                group.append("text")
                    .attr("x", depX).attr("y", 288)
                    .text(formatNumber(completionTime, 1))
                    .attr("font-size", "9px")
                    .attr("fill", COLORS.muted)
                    .attr("text-anchor", "middle");
            }
        }

        function renderResultsTable(customers) {
            const tableBody = elements.resultsTableBody;
            const fragment = document.createDocumentFragment();

            customers.forEach(customer => {
                const id = getProperty(customer, 'id', 'Id');
                const arrivalTime = getProperty(customer, 'arrivalTime', 'ArrivalTime');
                const serviceStartTime = getProperty(customer, 'serviceStartTime', 'ServiceStartTime');
                const completionTime = getProperty(customer, 'completionTime', 'CompletionTime');
                const serviceDuration = getProperty(customer, 'serviceDuration', 'ServiceDuration');
                const waitingTime = getProperty(customer, 'waitingTime', 'WaitingTime') ?? 0;
                const isRejected = getProperty(customer, 'isRejected', 'IsRejected');

                const row = document.createElement('tr');
                row.innerHTML = `
                    <td><span class="fw-semibold text-primary">${id}</span></td>
                    <td>${formatNumber(arrivalTime)}</td>
                    <td class="fw-semibold">${formatNumber(serviceStartTime)}</td>
                    <td class="fw-semibold">${formatNumber(waitingTime)}</td>
                    <td>${formatNumber(serviceDuration)}</td>
                    <td>${formatNumber(completionTime)}</td>
                    <td>${getStatusBadgeHtml(isRejected, waitingTime)}</td>
                `;
                fragment.appendChild(row);
            });

            tableBody.innerHTML = '';
            tableBody.appendChild(fragment);
        }

        function getStatusBadgeHtml(isRejected, waitingTime) {
            if (isRejected) {
                return '<span class="badge bg-danger-soft"><i class="bi bi-x-circle me-1"></i>Rejected</span>';
            }
            return waitingTime > WAIT_THRESHOLD
                ? '<span class="badge bg-warning-soft"><i class="bi bi-hourglass-split me-1"></i>Wait</span>'
                : '<span class="badge bg-success-soft"><i class="bi bi-check-circle me-1"></i>Direct</span>';
        }

        // === Event Listeners ===
        document.addEventListener('DOMContentLoaded', () => {
            initCharts();
            elements.runBtn.addEventListener('click', startSimulation);
            elements.chartZoom.addEventListener('input', (e) => updateChartScale(e.target.value));
        });
    </script>
}